{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "lib": ["ES2015"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "allowJs": true,  // Allow JavaScript files
        "checkJs": false  // Disable type checking for JavaScript files
    },
    "include": [
        "scripts",
        "jest.config.ts",
        ".eslintrc.js"
    ],
    "exclude": ["node_modules"]
}
